{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "sage.annotations-ngs.libraryPrep-0.0.4",
    "description": "The general strategy by which the library was prepared",
    "anyOf": [
        {
            "const": "amplicon",
            "description": "A region amplified by a PCR reaction",
            "source": "http://purl.obolibrary.org/obo/SO_0000006"
        },
        {
            "const": "cellHashing",
            "description": "Cell Hashing uses oligo-tagged antibodies against highly expressed surface proteins to place a 'sample barcode' on each single cell, enabling different samples to be multiplexed together and run in a single experiment",
            "source": "https://cite-seq.com/cell-hashing/"
        },
        {
            "const": "DNALibraryConstruction",
            "description": "A DNA library constructed from DNA extracted from cells",
            "source": "https://www.ebi.ac.uk/ols/ontologies/efo/terms?short_form=EFO_0010172"
        },
        {
            "const": "KapaHyperPrep",
            "description": "Kapa HyperPrep Kit",
            "source": "https://sequencing.roche.com/en/products-solutions/products/sample-preparation/dna-reagents/library-preparation/kapa-hyperprep.html"
        },
        {
            "const": "lncRNAenrichment",
            "description": "RNA library enriched for lncRNA",
            "source": "Sage Bionetworks"
        },
        {
            "const": "miRNAenrichment",
            "description": "RNA library with size selection for microRNAs",
            "source": "Sage Bionetworks"
        },
        {
            "const": "MULTIseq",
            "description": "MULTI-seq is a method that uses lipid tagged barcode oligos to label cells prior to processing using 10x Genomics",
            "source": "https://www.nature.com/articles/s41592-019-0433-8+"
	},
        {
            "const": "PCRfree",
            "description": "Library preparation without PCR amplification",
            "source": "Sage Bionetworks"
        },
        {
            "const": "polyAselection",
            "description": "RNA selection by polyA tail capture",
            "source": "Sage Bionetworks"
        },
        {
            "const": "rRNAdepletion",
            "description": "Total RNA library with ribosomal RNA depleted.",
            "source": "Sage Bionetworks"
        },
        {
            "const": "SPLITseq",
            "description": "split-seq library preparation",
            "source": "http://www.parsebiosciences.com/products"
        },
        {
            "const": "STARRSeq",
            "description": "Self-transcribing active regulatory region sequencing assay (STARR-Seq)",
            "source": "http://purl.obolibrary.org/obo/OBI_0002041"
        },
        {
            "const": "SureCell",
            "description": "SureCell WTA 3' Library Prep Kit",
            "source": "https://support.illumina.com/content/dam/illumina-support/documents/documentation/chemistry_documentation/surecell/surecell-wta3-library-prep-reference-guide-1000000021452-01.pdf"
        }
    ]
}

