{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://repo-prod.prod.sagebase.org/repo/v1/schema/type/registered/sage.annotations-ngs.libraryPreparationMethod-0.0.8",
    "description": "Method by which library was prepared",
    "type": "string",
    "anyOf": [
        {
            "const": "10x",
            "description": "10x Genomics library preparation",
            "source": "https://github.com/HumanCellAtlas/metadata-schema/blob/master/json_schema/type/process/sequencing/library_preparation_process.json"
        },
        {
            "const": "Accel-NGS 2S Plus",
            "description": "The Accel-NGS 2S Plus DNA Library Kit, designed for Illumina platforms, utilizes a proprietary adapter attachment chemistry which minimizes bias and supports inputs as low as 10 pg.",
            "source": "https://swiftbiosci.com/accel-ngs-2s-plus-dna-library-kit/"
        },
        {
            "const": "CEL-seq",
            "description": "CEL-Seq library preparation",
            "source": "https://github.com/HumanCellAtlas/metadata-schema/blob/master/json_schema/type/process/sequencing/library_preparation_process.json"
        },
        {
            "const": "Drop-Seq",
            "description": "Drop-Seq library preparation",
            "source": "https://github.com/HumanCellAtlas/metadata-schema/blob/master/json_schema/type/process/sequencing/library_preparation_process.json"
        },
        {
            "const": "NEBNext",
            "description": "NEBNext library preparation",
            "source": "https://www.neb-online.fr/en/neb-en/next-generation-sequencing/nebnext-kits-for-illumina/"
        },
        {
            "const": "NexteraXT",
            "description": "Nextera XT DNA library preparation kit",
            "source": "https://doi.org/10.1038/nmeth.f.269"
        },
        {
            "const": "Omni-ATAC",
            "description": "Omni-ATAC-seq library preparation",
            "source": "https://protocolexchange.researchsquare.com/article/nprot-6107/v1"
        },
        {
            "const": "sac-seq",
            "description": "TBA - contributor about to publish method",
            "source": "TBA"
        },
        {
            "const": "Smart-seq1",
            "description": "Switch mechanism at the 5' end of RNA templates; Smart-seq 1 library preparation",
            "source": "http://www.ebi.ac.uk/efo/EFO_0008930"
        },
        {
            "const": "Smart-seq2",
            "description": "Smart-seq 2 library preparation",
            "source": "https://github.com/HumanCellAtlas/metadata-schema/blob/master/json_schema/type/process/sequencing/library_preparation_process.json"
        },
        {
            "const": "Smart-seq4",
            "description": "Smart-seq4 library preparation",
            "source": "https://www.takarabio.com/products/next-generation-sequencing/single-cell-rna-and-dna-seq/smart-seq-v4-for-mrna-seq"
        },
        {
            "const": "SMRTbell",
            "description": "A SMRTbell template is a double-stranded DNA template capped by hairpin loops at both ends. The SMRTbell template preparation method creates a circularized template for use in SMRT Sequencing and can accommodate insert lengths from 250bp to > 20,000 bp",
            "source": "http://files.pacb.com/Training/IntroductiontoSMRTbellTemplatePreparation/story_content/external_files/Introduction%20to%20SMRTbell%E2%84%A2%20Template%20Preparation.pdf"
        },
        {
            "const": "TruSeq",
            "description": "TruSeq library preparation",
            "source": "https://github.com/HumanCellAtlas/metadata-schema/blob/master/json_schema/type/process/sequencing/library_preparation_process.json"
        }
    ]
}

